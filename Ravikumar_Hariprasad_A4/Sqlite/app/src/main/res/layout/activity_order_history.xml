    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/listViewOrderHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#3079ab">

        <TextView
            android:id="@+id/menulabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:padding="10dp"
            android:text="Order History" android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="75dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/column1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id" android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_marginRight="30dp"


            />
        <TextView
            android:id="@+id/column2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TimeStamp" android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/column1"
            android:layout_toRightOf="@+id/column1"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:id="@+id/column3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items" android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/column2"
            android:layout_toRightOf="@+id/column2"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:id="@+id/column4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price" android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/column3"
            android:layout_toRightOf="@+id/column3"
          />
        </RelativeLayout>

        <ListView android:id="@+id/listViewOrderHistorycontent" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            />


    </LinearLayout>
    <Button
        android:id="@+id/Back"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Back"
        android:background="#fff"
        android:textColor="#000"
        android:textStyle="bold"
        android:padding="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
