    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hello_world_text_view"
        android:text="@string/search"/>
    </LinearLayout>
</RelativeLayout>
