            android:id="@+id/philm_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Name"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/philmi_star_radio_button"
            android:layout_width="wrap_content"
